{% extends 'base.html.twig' %}

{% block title %}Fiche Produit{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-5">
<h1>Produit séléctionné:</h1>
<br>
    <div class="row">
        <div class="col-6">
            {% if produit is empty %}
            <p>Il n'y a aucun produit</p>
            {% else %}
                <h2>{{produit.nom}}</h2></li>
                <img src="{{ asset('assets/images/' ~ produit.photo) }}" style="height:15rem"/>
                <h3>Prix: {{produit.prix}}€</h3>
                <p>Quantité restante: {{produit.quantite}}</p>
                <br>
            {% endif %}
        </div>
        <div class="col-6">
        <h2>Modifier le produit:</h2>
        <br>
            {# {{form_start(formFicheProduit)}}
            {{form_end(formFicheProduit)}} #}
        </div>
    </div>
</div>
{% endblock %}
