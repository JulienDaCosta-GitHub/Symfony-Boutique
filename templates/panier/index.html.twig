{% extends 'base.html.twig' %}

{% block title %}Hello ProduitsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-5">
<h1>Votre panier:</h1>
<br>
    <div class="row">
        <div class="col-6">
            {% if produits is empty %}
            <p>Il n'y a rien dans le panier</p>
            {% else %}
            <ul>
                {% for panier in paniers %}
                    {% if produit.photo is not null %}
                    <img src="{{ asset('assets/images/' ~ produit.photo) }}" style="height:15rem"/>
                {% endif %}
                    <li>{{produit.quantite}}</li>
                    <li>{{produit.date_ajout}}</li>
                    <li>{{produit.etat}}</li>
                    <br>
                {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div class="col-6">
    </div>
</div>
{% endblock %}
